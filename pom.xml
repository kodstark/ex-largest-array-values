<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<!-- using maven as it is good choice for this small program -->
	<modelVersion>4.0.0</modelVersion>
	<groupId>kodstark.ex.lgvalues</groupId>
	<artifactId>kodstark.ex.lgvalues.parent</artifactId>
	<version>0.0.1</version>
	<packaging>pom</packaging>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<jacoco.version>0.5.5.201112152213</jacoco.version>
		<maven.compiler.version>2.3.2</maven.compiler.version>
		<colt.version>1.2.0</colt.version>
		<junit.version>4.8.1</junit.version>
        <commons.collections.version>3.2.1</commons.collections.version>
	</properties>	
	<modules>
	    <module>kodstark.ex.lgvalues</module>
	</modules>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven.compiler.version}</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>coverage</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.jacoco</groupId>
						<artifactId>jacoco-maven-plugin</artifactId>
						<version>${jacoco.version}</version>
						<configuration>
							<destfile>${basedir}/target/coverage-data/jacoco</destfile>
							<datafile>${basedir}/target/coverage-data/jacoco</datafile>
						</configuration>
						<executions>
							<execution>
								<id>jacoco-initialize</id>
								<goals>
									<goal>prepare-agent</goal>
								</goals>
							</execution>
							<execution>
								<id>jacoco-site</id>
								<phase>package</phase>
								<goals>
									<goal>report</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
